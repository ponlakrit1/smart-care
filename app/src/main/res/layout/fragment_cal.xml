<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ProgressBar
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:progress="75"
        android:max="100"
        android:progressDrawable="@drawable/circle"
        android:id="@+id/pbCal" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/tvCalNum"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="300dp"
        android:orientation="vertical">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Breakfast"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvBreakfast" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Lunch"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvLunch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvBreakfastNum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvLunchNum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Dinner"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvDinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Snack"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvSnack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_column="0"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvDinnerNum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_column="1"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/tvSnackNum" />

        </GridLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add"
        android:layout_margin="10dp" />

</RelativeLayout>